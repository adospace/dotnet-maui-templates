{
    "$schema": "https://json.schemastore.org/template",
    "author": "Vijay Anand E G",
    "defaultName": "MauiApp1",
    "classifications": [
        "MAUI",
        "Android",
        "Blazor",
        "Desktop",
        "iOS",
        "macOS",
        "Mac Catalyst",
        "Mobile",
        "Tizen",
        "WinUI",
        "Windows"
    ],
    "identity": "VijayAnand.MauiApp",
    "groupIdentity": "VijayAnand.MauiTemplates.App",
    "description": "A project for creating a .NET MAUI App for iOS, Android, Mac Catalyst, Tizen, and WinUI.",
    "name": ".NET MAUI App",
    "shortName": "mauiapp",
    "sourceName": "MauiApp.1",
    "tags": {
        "language": "C#",
        "type": "project",
        "vs_parametersToHide": "no-solution-file"
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "copyOnly": [
                "**/*.svg",
                "**/*.ttf",
                "**/*.txt"
            ],
            "modifiers": [
                {
                    "condition": "(no-solution-file || !(HostIdentifier == \"dotnetcli\" || HostIdentifier == \"dotnetcli-preview\"))",
                    "exclude": [
                        "MauiApp.1.sln"
                    ]
                },
                {
                    "condition": "(!Hybrid)",
                    "exclude": [
                        "**/Data/**",
                        "**/Pages/**",
                        "**/Shared/**",
                        "**/wwwroot/**",
                        "**/*.razor"
                    ]
                },
                {
                    "condition": "(Shell)",
                    "exclude": [
                        "MainPage.xaml",
                        "MainPage.xaml.cs"
                    ]
                },
                {
                    "condition": "(!Shell)",
                    "exclude": [
                        "AppShell.xaml",
                        "AppShell.xaml.cs",
                        "LoginPage.xaml",
                        "LoginPage.xaml.cs"
                    ]
                },
                {
                    "condition": "(!(Tabbed || Shell))",
                    "exclude": [
                        "EventsPage.xaml",
                        "EventsPage.xaml.cs"
                    ]
                },
                {
                    "condition": "(Hierarchical)",
                    "exclude": [
                        "SearchPage.xaml",
                        "SearchPage.xaml.cs",
                        "SettingsPage.xaml",
                        "SettingsPage.xaml.cs"
                    ]
                },
                {
                    "condition": "(Plain || Hybrid)",
                    "exclude": [
                        "NewEventPage.xaml",
                        "NewEventPage.xaml.cs",
                        "DateTimePicker.xaml",
                        "DateTimePicker.xaml.cs",
                        "SearchPage.xaml",
                        "SearchPage.xaml.cs",
                        "SettingsPage.xaml",
                        "SettingsPage.xaml.cs"
                    ]
                }
            ]
        }
    ],
    "preferNameDirectory": true,
    "guids": [
        "E3234856-C63F-46B8-A907-866DE058A7C1",
        "81a9fb0a-63f5-4ef6-b38e-0cf88600102a"
    ],
    "symbols": {
        "Framework": {
            "type": "parameter",
            "datatype": "choice",
            "description": "Option to choose the application target framework.",
            "choices": [
                {
                    "choice": "net7.0",
                    "description": "Target .NET 7",
                    "displayName": ".NET 7 (STS)"
                },
                {
                    "choice": "net6.0",
                    "description": "Target .NET 6",
                    "displayName": ".NET 6 (LTS)"
                }
            ],
            "replaces": "MAUI_TFM",
            "defaultValue": "net7.0"
        },
        "applicationId": {
            "type": "parameter",
            "description": "Overrides the App Identifier of the project",
            "datatype": "string",
            "replaces": "com.companyname.mauiAppId"
        },
        "design-pattern": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "Plain",
            "description": "Option to choose the application design pattern.",
            "choices": [
                {
                    "choice": "Plain",
                    "description": "App configured to work with a single, initial screen."
                },
                {
                    "choice": "Hierarchical",
                    "description": "App configured to work in a hierarchical pattern using NavigationPage."
                },
                {
                    "choice": "Tab",
                    "description": "App configured to work in a Tabbed fashion using TabbedPage."
                },
                {
                    "choice": "Shell",
                    "description": "App configured to work with Routes using Shell page."
                },
                {
                    "choice": "Hybrid",
                    "description": "App configured to work in a Hybrid fashion using BlazorWebView."
                }
            ]
        },
        "target-platform": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "All",
            "description": "Option to choose the application target platform.",
            "allowMultipleValues": true,
            "choices": [
                {
                    "choice": "All",
                    "description": "Targets all possible .NET MAUI supported platforms."
                },
                {
                    "choice": "Base",
                    "description": "Targets base framework (.NET 6/7)."
                },
                {
                    "choice": "Android",
                    "description": "Targets Android platform."
                },
                {
                    "choice": "iOS",
                    "description": "Targets iOS platform."
                },
                {
                    "choice": "macOS",
                    "description": "Targets macOS platform via Mac Catalyst."
                },
                {
                    "choice": "Windows",
                    "description": "Targets Windows platform.."
                },
                {
                    "choice": "Tizen",
                    "description": "Targets Tizen platform.."
                },
                {
                    "choice": "Mobile",
                    "description": "Targets Android and iOS platforms."
                },
                {
                    "choice": "Desktop",
                    "description": "Targets Windows and macOS platforms."
                },
                {
                    "choice": "Apple",
                    "description": "Targets iOS and macOS platforms."
                }
            ]
        },
        "include-toolkit": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to add and configure CommunityToolkit.Maui NuGet package reference.",
            "displayName": "Add and configure Community_Toolkit.Maui NuGet package reference"
        },
        "include-markup": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to add CommunityToolkit.Maui.Markup NuGet package reference.",
            "displayName": "Add CommunityToolkit.Maui._Markup NuGet package reference"
        },
        "include-mvvm-toolkit": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to add CommunityToolkit.Mvvm (aka Microsoft MVVM Toolkit) NuGet package reference.",
            "displayName": "Add CommunityToolkit.Mvvm (aka Microsoft MV_VM Toolkit) NuGet package reference"
        },
        "include-maps": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to add and configure Microsoft.Maui.Controls.Maps NuGet package reference (.NET 7).",
            "displayName": "Add and configure Microsoft.Maui._Controls.Maps NuGet package reference"
        },
        "include-media-element": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to add and configure CommunityToolkit.Maui.MediaElement NuGet package reference (.NET 7).",
            "displayName": "Add and configure CommunityToolkit.Maui.Media_Element NuGet package reference"
        },
        "include-foldable": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to add and configure Microsoft.Maui.Controls.Foldable NuGet package reference (.NET 7).",
            "displayName": "Add and configure Microsoft.Maui.Controls._Foldable NuGet package reference"
        },
        "windows-unpackaged": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to configure Windows target as Unpackaged type.",
            "displayName": "Option to configure Windows target as _Unpackaged type"
        },
        "conditional-compilation": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to configure conditional compilation so that platform source files can be anywhere."
        },
        "no-solution-file": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to skip creating a solution file."
        },
        "nameLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "name",
                "toLower": true
            },
            "replaces": "mauiAppId"
        },
        "designPatternLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "design-pattern",
                "toLower": true
            }
        },
        "targetPlatformLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "target-platform",
                "toLower": true
            }
        },
        "frameworkLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "Framework",
                "toLower": true
            }
        },
        "Plain": {
            "type": "computed",
            "value": "(design-pattern == \"Plain\" || designPatternLower == \"plain\")"
        },
        "Hierarchical": {
            "type": "computed",
            "value": "(design-pattern == \"Hierarchical\" || designPatternLower == \"hierarchical\")"
        },
        "Tabbed": {
            "type": "computed",
            "value": "(design-pattern == \"Tab\" || designPatternLower == \"tab\")"
        },
        "Shell": {
            "type": "computed",
            "value": "(design-pattern == \"Shell\" || designPatternLower == \"shell\")"
        },
        "Hybrid": {
            "type": "computed",
            "value": "(design-pattern == \"Hybrid\" || designPatternLower == \"hybrid\")"
        },
        "Net7": {
            "type": "computed",
            "value": "(frameworkLower == \"net7.0\")"
        },
        "AllPlatforms": {
            "type": "computed",
            "value": "(target-platform == \"All\")"
        },
        "IsAndroid": {
            "type": "computed",
            "value": "(target-platform == \"Android\" || target-platform == \"Mobile\")"
        },
        "IsiOS": {
            "type": "computed",
            "value": "(target-platform == \"Apple\" || target-platform == \"iOS\" || target-platform == \"Mobile\")"
        },
        "IsmacOS": {
            "type": "computed",
            "value": "(target-platform == \"Apple\" || target-platform == \"Desktop\" || target-platform == \"macOS\")"
        },
        "IsWindows": {
            "type": "computed",
            "value": "(target-platform == \"Desktop\" || target-platform == \"Windows\")"
        },
        "IsTizen": {
            "type": "computed",
            "value": "(target-platform == \"Tizen\")"
        },
        "IsBase": {
            "type": "computed",
            "value": "(target-platform == \"Base\")"
        },
        "Unpackaged": {
            "type": "computed",
            "value": "(windows-unpackaged)"
        },
        "AddMapsPackage": {
            "type": "computed",
            "value": "(Net7 && include-maps)"
        },
        "AddMediaPackage": {
            "type": "computed",
            "value": "(Net7 && include-media-element)"
        },
        "AddFoldablePackage": {
            "type": "computed",
            "value": "(Net7 && include-foldable)"
        },
        "AddToolkitPackage": {
            "type": "computed",
            "value": "(include-toolkit)"
        },
        "AddMarkupPackage": {
            "type": "computed",
            "value": "(include-markup)"
        },
        "AddMvvmToolkitPackage": {
            "type": "computed",
            "value": "(include-mvvm-toolkit)"
        },
        "ConditionalCompilation": {
            "type": "computed",
            "value": "(conditional-compilation)"
        },
        "HostIdentifier": {
            "type": "bind",
            "binding": "HostIdentifier"
        }
    },
    "primaryOutputs": [
        {
            "path": "App.xaml.cs"
        }
    ]
}
